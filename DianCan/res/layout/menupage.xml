<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:layoutAnimation="@anim/menupage_anim_layout"
  android:background="@drawable/backimg">
  <LinearLayout android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	android:orientation="vertical">
	  <ImageView android:id="@+id/imgpage" 
			    android:layout_width="400px"
			    android:layout_height="400px"  
			    android:layout_margin="5px"/>
	  <ImageView android:id="@+id/imglittle" 
			    android:layout_width="1px"
			    android:layout_height="1px"
			    android:layout_margin="5px"/>
	  <TextView android:id="@+id/menutitle" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textColor="#FFFFFFFF"
	            android:textSize="32px" />
	  <TextView android:id="@+id/menuprice"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:textColor="#FFFFFFFF" 
	            android:textSize="18px" />
	  <TextView android:id="@+id/menuinfo"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:textColor="#FFFFFFFF" 
	            android:textSize="18px" />
  </LinearLayout>
</RelativeLayout>
