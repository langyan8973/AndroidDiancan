<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:id="@+id/item" 
    style="@style/Widget.Layout.RestaurantItemHLayout"  	>
    <ImageView android:id="@+id/restaurant_image" 
        android:layout_width="100.0dip" 
        android:layout_height="80.0dip" 
        android:contentDescription="@string/image_discription"
        style="@style/Widget.AsyncImageView.Default" />
    <LinearLayout android:paddingLeft="10.0dip" 
        android:layout_width="0dip" 
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:layout_weight="1.0">
        <TextView android:textAppearance="?android:textAppearanceMedium"
             android:id="@+id/tv_name" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:lines="1" 
             style="@style/Widget.TextView.Title.Item" />
        <TextView android:id="@+id/tv_address" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:textColor="@color/sbc_snippet_text"
             />
        <TextView android:id="@+id/tv_telephone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:textColor="@color/sbc_snippet_text"
            />
    </LinearLayout>
</LinearLayout>