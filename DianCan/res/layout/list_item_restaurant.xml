<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" 
    android:id="@+id/item" 
    android:padding="5.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/restaurant_image" 
        android:layout_width="100.0dip" 
        android:layout_height="80.0dip" 
        style="@style/Widget.AsyncImageView.Default" />
    <RelativeLayout android:paddingLeft="10.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0">
        <TextView android:textAppearance="?android:textAppearanceMedium"
             android:id="@+id/tv_name" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:text="麦当劳" android:lines="1" 
             style="@style/Widget.TextView.Title.Item" />
        <TextView android:id="@+id/tv_address" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="送  餐  费：" 
            android:layout_below="@+id/tv_name" />
        <TextView android:id="@+id/tv_telephone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="起送标准：" 
            android:layout_below="@+id/tv_address" />
    </RelativeLayout>
    <ImageView android:layout_gravity="center_vertical" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_array_small" />
</LinearLayout>