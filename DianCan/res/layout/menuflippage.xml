<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backimg"
    android:id="@+id/contentLayout">
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/rl1">
        <ImageView android:id="@+id/imgtop" 
			    android:layout_width="fill_parent"
			    android:layout_height="90px"/>
        <RelativeLayout 
	        android:layout_width="100px"
	        android:layout_height="wrap_content"
	        android:background="#aa000000"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/catLayout1">
	       <TextView  
	        android:id="@+id/categoryname1"  
	        android:layout_width="wrap_content"   
	        android:layout_height="wrap_content"  
	        android:textColor="#FFFFFFFF"
	        android:layout_centerInParent="true"/>  
	    </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:id="@+id/rl2">
        
        <ViewFlipper android:id="@+id/ViewFlipper01"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		</ViewFlipper>
		<RelativeLayout 
	        android:layout_width="100px"
	        android:layout_height="wrap_content"
	        android:background="#aa000000"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/catLayout">
	       <TextView  
	        android:id="@+id/categoryname"  
	        android:layout_width="wrap_content"   
	        android:layout_height="wrap_content"  
	        android:textColor="#FFFFFFFF"
	        android:layout_centerInParent="true"/>  
	    </RelativeLayout>
        
    </RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rl2">
	    <ImageView android:id="@+id/imgbottom" 
			    android:layout_width="fill_parent"
			    android:layout_height="90px"/>
	    <RelativeLayout 
	        android:layout_width="100px"
	        android:layout_height="wrap_content"
	        android:background="#aa000000"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/catLayout2">
	       <TextView  
	        android:id="@+id/categoryname2"  
	        android:layout_width="wrap_content"   
	        android:layout_height="wrap_content"  
	        android:textColor="#FFFFFFFF"
	        android:layout_centerInParent="true"/>  
	    </RelativeLayout>
	</RelativeLayout>
	
	<ImageView android:id="@+id/imglittle" 
			    android:layout_width="1px"
			    android:layout_height="1px"
			    android:layout_centerVertical="true"
			    android:layout_alignParentLeft="true"/>
</RelativeLayout>