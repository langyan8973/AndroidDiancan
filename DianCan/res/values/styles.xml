	    <item name="android:paddingRight">10dip</item>
	</style>
	<style name="Widget.Layout.CategoryListItem" parent="@style/Widget.VLayout">
	    <item name="android:background">@drawable/cat_list_item_bg</item>
	    <item name="android:padding">0dip</item>
	    <item name="android:gravity">center</item>
	</style>
	<style name="Widget.LinearLayout.SearchBackLayout" parent="@style/Widget.HLayout">
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">2dip</item>
	    <item name="android:paddingTop">0dip</item>
	    <item name="android:paddingRight">2dip</item>
	    <item name="android:paddingBottom">0dip</item>
	    <item name="android:background">@drawable/searchlayoutborder</item>
	</style>
	<style name="Widget.LinearLayout.SearchLayout" parent="@style/Widget.HLayout">
	    <item name="android:background">@drawable/cornerlayout</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">8dip</item>
	    <item name="android:paddingTop">2dip</item>
	    <item name="android:paddingRight">8dip</item>
	    <item name="android:paddingBottom">2dip</item>
	</style>
	<style name="Widget.Layout.Dialog" parent="@style/Widget.VLayout">
	    <item name="android:padding">5dip</item>
	    <item name="android:background">@drawable/alertback</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	<style name="Widget.VLayout.OauthBtnLayout" parent="@style/Widget.VLayout">
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	<style name="Widget.HLayout.UserInfoLayout" parent="@style/Widget.HLayout">
	    <item name="android:padding">3dip</item>
	</style>
	
	<!-- TextView样式 -->
	<style name="Widget.TextView" parent="@style/Widget"/>
	<style name="Widget.TextView.Title" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	</style>
	<style name="Widget.TextView.Title.sub" parent="@style/Widget.TextView.Title">
	    <item name="android:textSize">12sp</item>
	</style>
	<style name="Widget.TextView.SectionTitle" parent="@style/Widget.TextView.Title">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:background">@drawable/orangeback</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	    <item name="android:paddingBottom">4dip</item>
	    <item name="android:paddingTop">0dip</item>
	</style>
	<style name="Widget.TextView.HistorySectionTitle" parent="@style/Widget.TextView.Title">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
	<style name="Widget.TextView.Title.Item" parent="@style/Widget.TextView">
	    <item name="android:textColor">#FF090909</item>
	    <item name="android:textSize">18sp</item>
	</style>
	<style name="Widget.TextView.CityText" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:background">@drawable/spinnerback</item>
	</style>
	<style name="Widget.TextView.Count" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:background">@drawable/count_deposit</item>
	    <item name="android:visibility">invisible</item>
	</style>
	<style name="Widget.TextView.OrderDes" parent="@style/Widget.TextView">
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">12sp</item>
	</style>
	<style name="Widget.TextView.CountDeposit" parent="@style/Widget.TextView">
	    <item name="android:textColor">@color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:background">@drawable/count_deposit</item>
	    <item name="android:visibility">invisible</item>
	</style>
	<style name="Widget.TextView.TabTitle" parent="@style/Widget.TextView">
