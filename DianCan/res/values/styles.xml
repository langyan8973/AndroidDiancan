		<item name="android:background">@drawable/btn_browse</item>
	</style>
	<style name="Widget.Button.History" parent="@style/Widget.Button.Bottom">
		<item name="android:background">@drawable/btn_history</item>
	</style>
	<style name="Widget.Button.Account" parent="@style/Widget.Button.Bottom">
		<item name="android:background">@drawable/btn_account</item>
	</style>
	<style name="Widget.Button.Search" parent="@style/Widget.Button.Bottom">
		<item name="android:background">@drawable/btn_search</item>
	</style>
	<style name="Widget.Button.Title.Back">
	    <item name="android:textAppearance">?android:textAppearanceSmallInverse</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/btn_title_back</item>
		<item name="android:lines">1</item>
	</style>
	
	<!-- ListView样式 -->
	<style name="Widget.AbsListView" parent="@style/Widget">
		<item name="android:scrollbars">vertical</item>
		<item name="android:fadingEdge">vertical</item>
		<item name="android:fadingEdgeLength">0.0dip</item>
	</style>
	<style name="Widget.ListView" parent="@style/Widget.AbsListView">
		<item name="android:listSelector">@drawable/list_selector_background</item>
		<item name="android:cacheColorHint">@null</item>
		<item name="android:divider">@color/transparent</item>
		<item name="android:footerDividersEnabled">false</item>
	</style>
	<style name="Widget.ListView.Restaurant" parent="@style/Widget.ListView">
		<item name="android:listSelector">@drawable/transparentitem</item>
	</style>
	<style name="Widget.ListView.Recipe" parent="@style/Widget.ListView">
		<item name="android:listSelector">@drawable/transparentitem</item>
	</style>
	<style name="Widget.ListView.City" parent="@style/Widget.ListView">
	    <item name="android:background">@drawable/c</item>
	    <item name="android:divider">@drawable/dotted_line_segment</item>
	</style>
	<style name="Widget.ListView.Catetory" parent="@style/Widget.AbsListView">
	    <item name="android:listSelector">@drawable/transparentitem</item>
		<item name="android:cacheColorHint">@null</item>
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">2dip</item>
		<item name="android:padding">3dip</item>
		<item name="android:footerDividersEnabled">false</item>
	</style>
	<style name="Widget.ListView.SearchResult" parent="@style/Widget.AbsListView">
		<item name="android:cacheColorHint">@null</item>
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">0dip</item>
		<item name="android:paddingLeft">8dip</item>
		<item name="android:paddingBottom">8dip</item>
		<item name="android:paddingTop">0dip</item>
		<item name="android:paddingRight">0dip</item>
		<item name="android:background">@drawable/resultback</item>
		<item name="android:footerDividersEnabled">false</item>
	</style>
	
	
	
	<!-- ImageView样式 -->
	<style name="Widget.AsyncImageView" parent="@style/Widget"/>
	<style name="Widget.AsyncImageView.Default" parent="@style/Widget.AsyncImageView">
		<item name="scaleType">centerCrop</item>
	</style>
	<style name="Widget.Image" parent="@style/Widget">
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription"> </item>
    </style>
	<style name="Widget.Image.SearchClear" parent="@style/Widget.Image">
        <item name="android:src">@drawable/cleanbtn</item>
    </style>
    <style name="Widget.Image.SearchIcon" parent="@style/Widget.Image">
        <item name="android:src">@drawable/search</item>
    </style>
	
    
    
	<!-- 其它样式 -->
	<style name="Widget.TabWidget">
	    <item name="android:paddingLeft">0dip</item>
	    <item name="android:paddingRight">0dip</item>
	    <item name="android:paddingTop">0dip</item>
	    <item name="android:background">@drawable/bottom_tab_bg</item>
	</style>
	
	<style name="RecipeTopBar">
		<item name="android:paddingLeft">3.0dip</item>
		<item name="android:paddingTop">3.0dip</item>
		<item name="android:paddingRight">3.0dip</item>
		<item name="android:paddingBottom">3.0dip</item>
	</style>
	
	<style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/transparentitem</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
    </style>
    
	<style name="SearchEdit">
	    <item name="android:background">@color/transparent</item>
	    <item name="android:imeOptions">actionDone</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:paddingLeft">3dip</item>
	    <item name="android:hint">@string/search</item>
	</style>
	
    <style name="AnimationActivity" parent="@android:style/Animation.Activity" mce_bogus="1">    
		<item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>          
		<item name="android:activityOpenExitAnimation">@anim/push_left_out</item>          
		<item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>          
		<item name="android:activityCloseExitAnimation">@anim/push_right_out</item>   
	</style> 
	
    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@drawable/transparentitem</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
    </style>
    
    <style name="FinderView">
	    <item name="android:background">@color/transparent</item>
	</style>
</resources>